{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@iso/redux/*": [
        "redux/*"
      ],
      "@iso/helpers/*": [
        "helpers/*"
      ],
      "@iso/assets/*": [
        "assets/*"
      ],
      "@iso/images/*": [
        "assets/images/*"
      ],
      "@iso/pages/*": [
        "pages/*"
      ]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
